<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <HorizontalScrollView
                android:id="@+id/home_intent_lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_intentimg1"
                        android:layout_width="412dp"
                        android:layout_height="252dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_item1_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_intentimg2"
                        android:layout_width="412dp"
                        android:layout_height="252dp"
                        android:layout_toRightOf="@+id/home_intentimg1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_item1_2"
                        app:layout_constraintStart_toEndOf="@+id/home_intentimg1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_intentimg3"
                        android:layout_width="412dp"
                        android:layout_height="252dp"
                        android:layout_toRightOf="@+id/home_intentimg2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_item1_1"
                        app:layout_constraintStart_toEndOf="@+id/home_intentimg2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/home_intentimg4"
                        android:layout_width="412dp"
                        android:layout_height="252dp"
                        android:layout_toRightOf="@+id/home_intentimg3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_item1_1"
                        app:layout_constraintStart_toEndOf="@+id/home_intentimg3"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_intent_lin"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_intent_lin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_homeActivity_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/profile_round_person"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/home_intenttxt1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="LGU봉선동쌍용사거리"
                        android:textColor="#111"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/home_intenttxt2"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/home_intenttxt2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="남구 봉선1동"
                        android:textColor="#111"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/home_intenttxt1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view_homeActivity_line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/carrot_softgray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_homeActivity_1" />

                <TextView
                    android:id="@+id/home_intenttitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="아이폰11 화이트 128"
                    android:textColor="#111"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_homeActivity_line1" />

                <TextView
                    android:id="@+id/home_intent_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="디지털기기"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_intenttitle" />

                <TextView
                    android:id="@+id/tv_homeActivity_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" · "
                    app:layout_constraintStart_toEndOf="@+id/home_intent_type"
                    app:layout_constraintTop_toBottomOf="@+id/home_intenttitle" />

                <TextView
                    android:id="@+id/home_intent_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="끌올 46분 전"
                    app:layout_constraintStart_toEndOf="@+id/tv_homeActivity_dot"
                    app:layout_constraintTop_toBottomOf="@+id/home_intenttitle" />

                <TextView
                    android:id="@+id/home_intent_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="아이폰11화이트 생활감있고 찍힘도 다수 있습니다. 케이스나 필름으로 커버하고 사용하실분 연라주세요"
                    android:textColor="#111"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/home_intent_type" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@id/constraint_homeActivity_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_intent_contents">

                    <TextView
                        android:id="@+id/tv_homeActivity_favor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="관심 "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/home_intent_favor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        app:layout_constraintStart_toEndOf="@+id/tv_homeActivity_favor"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_homeActivity_dot2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" · "
                        app:layout_constraintStart_toEndOf="@+id/home_intent_favor"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_homeActivity_favor2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="조회 "
                        app:layout_constraintStart_toEndOf="@+id/tv_homeActivity_dot2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/home_intent_look"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="242"
                        app:layout_constraintStart_toEndOf="@+id/tv_homeActivity_favor2"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_homeActivity_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_homeActivity_2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="이 게시글 신고하기"
                        android:textColor="#111"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view_homeActivity_line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/carrot_softgray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_homeActivity_3" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_homeActivity_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_homeActivity_line2">

                    <TextView
                        android:id="@+id/Home_intent_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="교육집안"
                        android:textColor="#111"
                        android:textSize="18dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/Home_intent_id"
                        android:text="님의 판매 상품"
                        android:textColor="#111"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@+id/Home_intent_id"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_homeActivity_4">

                    <ImageView
                        android:onClick="@{()->home.increase()}"
                        android:id="@+id/home_intent_favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_favorite_fill0_wght400_grad0_opsz48"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/constraint_homeActivity_5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraint_homeActivity_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/home_intent_favorite"
                        app:layout_constraintTop_toTopOf="parent"

                        >

                        <TextView
                            android:id="@+id/chat_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="650,000원"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/chat_con"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="가격 제안하기"
                            android:textColor="@color/carrot"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/chat_id" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/carrot"
                        android:padding="20dp"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="채팅하기"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>